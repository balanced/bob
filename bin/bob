#!/usr/bin/env python
from __future__ import unicode_literals

import click
import logging
import sys

from bob import commands


def setup_logging(log_level=logging.INFO):
    logging.basicConfig(
        level=log_level,
        format='%(asctime)s : %(levelname)s : %(name)s : %(message)s',
        stream=sys.stderr,
    )


@click.group()
def cli():
    pass


commands.add_commands(cli)


if __name__ == '__main__':
    setup_logging()
    cli()
